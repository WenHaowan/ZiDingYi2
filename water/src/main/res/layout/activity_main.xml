<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wenhao="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="as.bwei.com.water.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_above="@+id/wave_view"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"
            />
        <as.bwei.com.water.WaterView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            wenhao:color_01="#f00f00"
            wenhao:color_02="#00f00f"
            android:layout_alignParentBottom="true"
            android:id="@+id/wave_view"
            />
    </RelativeLayout>

</RelativeLayout>
